<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layer1"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/status_size"
                android:textColor="@color/table_content"
                android:id="@+id/txtpreading"
                android:text="450"
                android:padding="@dimen/table_padding"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/status_size"
                android:textColor="@color/table_content"
                android:id="@+id/txtaccno"
                android:text="0958-010058"
                android:padding="@dimen/table_padding"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/status_size"
                android:textColor="@color/table_content"
                android:id="@+id/txtcname"
                android:text="Peter Mungai"
                android:padding="@dimen/table_padding"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/status_size"
                android:textColor="@color/table_content"
                android:id="@+id/txtcdate"
                android:text="12/04/2017"
                android:padding="@dimen/table_padding"
                android:layout_weight="1"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>